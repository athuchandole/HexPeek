{
  "manifest_version": 3,
  "name": "Page Colors Detector",
  "version": "1.0",
  "description": "Detects all colors used on a webpage and displays them.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}